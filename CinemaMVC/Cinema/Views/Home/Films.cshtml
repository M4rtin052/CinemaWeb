@model List<FilmInformationModel>

@{
    ViewData["Title"] = "Films";
}

<!DOCTYPE html>
<style>

    .bg-img {
    background-image: url("../../Pictures/CinemaHallFilmsBG.jpg");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
        
    filter: blur(5px);

    position: fixed;
    top: -10%;
    left: -10%;
    width: 120%;
    height: 120%;
    z-index: -1;
    }

    .row {
    display: flex;
    flex-wrap: wrap;
    padding: 20px;
    }

    .column {
    position: sticky;
    flex: 33.33%;
    padding: 5px;
    }

    .image {
    display: block;
    margin-left: auto;
    margin-right: auto;
    height: 550px;
    overflow: hidden;
    cursor: pointer;
    opacity: 1;
    }

    .image:hover {
    opacity: 0.9;
    }

</style>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="bg-img"></div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="column">
                <img class="image" onclick="location.href='@Url.Action("FilmDescription","FilmInformation", new { id = item.Film_Id})'" src="~/Pictures/@item.MainPicture">
            </div>
        }
    </div>
</body>
</html>
