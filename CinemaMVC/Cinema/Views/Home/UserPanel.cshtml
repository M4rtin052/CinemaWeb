@model List<TicketsModel>

@{
    ViewData["Title"] = "User Panel";
}

<!DOCTYPE html>
<style>
    body {
    background-image: linear-gradient(tan, white);
    }

    .row {
    display: inline;
    flex-wrap: wrap;
    padding: 20px;
    text-align: center;
    }

    .column {
    position: sticky;
    flex: 33.33%;
    padding: 5px;
    }

    .central {
    margin: auto;
    width: 50%;
    text-align: center;
    }

    .table {
    margin: auto;
    text-align: center;
    }

    .image {
    display: block;
    margin-left: auto;
    margin-right: auto;
    height: 550px;
    overflow: hidden;
    }

    .text {
    display: block;
    font-size: 18px;
    margin: auto;
    width: 80%;
    text-align: center;
    padding: 30px 0;
    color: white;
    text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black;
    }

</style>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <h1 class="text-center" style="padding-bottom: 15px;"><b>Twoje bilety</b></h1>

    <table class="table table-bordered border-dark align-middle text-center table-striped">
        <tr style="background-color: tan;">
            <th>Film</th>
            <th>Sala</th>
            <th>Rząd</th>
            <th>Miejsce</th>
            <th>Data seansu</th>
            <th>Cena biletu</th>
        </tr>
        @foreach (var ticket in Model)
        {
            @if (Model.Where(x => x.Showing.Showing_Id == ticket.Showing_Id).Select(x => x.Showing.DateTime.Date).FirstOrDefault() > DateTime.Now.Date)
            {
                <tr style="background-color: beige;">
                    <td>@Model.Where(x => x.Showing.Showing_Id == ticket.Showing_Id).Select(x => x.Showing.Films.Name).FirstOrDefault()</td>
                    <td>@Model.Where(x => x.Seats.CinemaHall.CinemaHall_Id == ticket.Seats.CinemaHall_Id).Select(x => x.Seats.CinemaHall.HallNumber).FirstOrDefault()</td>
                    <td>@Model.Where(x => x.Seats.Seats_Id == ticket.Seats_Id).Select(x => x.Seats.Row).FirstOrDefault()</td>
                    <td>@Model.Where(x => x.Seats.Seats_Id == ticket.Seats_Id).Select(x => x.Seats.Seat).FirstOrDefault()</td>
                    <td>@Model.Where(x => x.Showing.Showing_Id == ticket.Showing_Id).Select(x => x.Showing.DateTime).FirstOrDefault()</td>
                    <td>@ticket.Price zł</td>
                </tr>
            }
        }
    </table>

    @if (!Model.Any())
    {
        <div class="central">
            <label>Nie masz kupionych biletów.</label>
        </div>
    }

</body>
</html>